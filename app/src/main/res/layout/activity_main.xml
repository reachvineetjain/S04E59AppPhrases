<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nehvin.s04e59appphrases.MainActivity">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">


        <Button
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:gravity="fill"
            android:onClick="buttonTapped"
            android:tag="0"
            android:text="Hello"
            android:textAllCaps="false"
            android:textAlignment="center" />

        <Button
            android:id="@+id/howareyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:gravity="fill"
            android:tag="1"
            android:text="How Are You"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:onClick="buttonTapped" />

        <Button
            android:id="@+id/goodevening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:gravity="fill"
            android:tag="2"
            android:text="Good Evening"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:onClick="buttonTapped" />

        <Button
            android:id="@+id/please"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:gravity="fill"
            android:tag="3"
            android:text="Please"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:onClick="buttonTapped"
            />

        <Button
            android:id="@+id/mynameis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:gravity="fill"
            android:tag="4"
            android:text="My Name is"
            android:textAllCaps="false"
            android:onClick="buttonTapped"
            android:textAlignment="center" />

        <Button
            android:id="@+id/doyouspeakenglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:gravity="fill"
            android:tag="5"
            android:text="Do you &#10; speak english"
            android:textAllCaps="false"
            android:onClick="buttonTapped"
            android:textAlignment="center" />

        <Button
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:gravity="fill"
            android:tag="6"
            android:text="Welcome"
            android:textAllCaps="false"
            android:onClick="buttonTapped"
            android:textAlignment="center" />

        <Button
            android:id="@+id/ilivein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:gravity="fill"
            android:tag="7"
            android:text="I live in"
            android:textAllCaps="false"
            android:onClick="buttonTapped"
            android:textAlignment="center" />

    </GridLayout>

</RelativeLayout>
